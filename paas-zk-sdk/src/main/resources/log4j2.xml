<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="off">

 	<properties>
        <property name="LOG_HOME">${sys:log.dir}</property>
	</properties>
    
	<Appenders>

		<Console name="STDOUT" target="SYSTEM_OUT" follow="true">
			<PatternLayout pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c(%L) - %m%n" />
		</Console>
		<!-- 日志 按天分 -->
		<RollingFile name="LOGFILE"  fileName="${LOG_HOME}/${projectName}/${projectName}.log"
					 filePattern="${LOG_HOME}/${projectName}/${projectName}.log.%d{yyyy-MM-dd}">
			<PatternLayout pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c(%L) - %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" modulate="true" />
			</Policies>
		</RollingFile>  
        
	</Appenders>


	<Loggers>
		<logger name="com.paas" level="debug" additivity="false">
			<appender-ref ref="STDOUT" />
			<appender-ref ref="LOGFILE" />
		</logger>
		<!--<logger name="com.baidu.disconf" level="debug" additivity="false">-->
			<!--<appender-ref ref="STDOUT" />-->
			<!--<appender-ref ref="LOGFILE" />-->
		<!--</logger>-->


		<logger name="org.apache.zookeeper" level="WARN" additivity="false">
			<appender-ref ref="STDOUT" />
		</logger>
		<logger name="org.I0Itec"  level="WARN" additivity="false">
			<appender-ref ref="STDOUT" />
		</logger>
		<logger name="org.springframework"  level="WARN" additivity="false">
			<appender-ref ref="STDOUT" />
		</logger>
		
		<!-- for all other loggers log only info and above log messages -->
		<root level="INFO">
			<appender-ref ref="STDOUT" />
		</root>
		
		<asyncRoot level="INFO">
			<appender-ref ref="LOGFILE" />
		</asyncRoot>
	</Loggers>

	

</Configuration>